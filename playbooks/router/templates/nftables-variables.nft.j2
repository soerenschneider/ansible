define LOCAL_{{ tag | upper }} = { {% for item in vars['fw_tags_local_' + tag ] %}{{ item }}{% if not loop.last %}, {% endif %}{% endfor %} }
{% endif %}
{% if vars['fw_tags_global_' + tag ] | length > 0 %}
define GLOBAL_{{ tag | upper }} = { {% for item in vars['fw_tags_global_' + tag ] %}{{ item }}{% if not loop.last %}, {% endif %}{% endfor %} }
{% endif %}
{% endfor %}


