[global]
	workgroup = SAMBA
	security = user
	passdb backend = tdbsam
	printing = cups
	printcap name = cups
	load printers = no

{% for share in samba.shares %} 
[{{ share.name }}]
	comment = {{ share.desc | default(share.name) }}
	browseable = Yes
	read only = {{ share.ro | default("Yes") }}
	path = {{ share.path }}
	public = {{ share.public }}
{% endfor %}
