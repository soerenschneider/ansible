{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":rebaseStalePrs"
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "updateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "regexManagers": [
     {
         "fileMatch": ["playbook.ya?ml$"],
         "matchStrings": [".+_image: \"(?<depName>.*?):(?<currentValue>.*?)\""],
         "datasourceTemplate": "docker"
    },
    {
        "fileMatch": [".*y[a]?ml$"],
        "matchStrings": [
            "#\\srenovate:\\sdatasource=(?<datasource>docker)( versioning=(?<versioning>.*?))?\\s.+_image: \"(?<depName>.*?):(?<currentValue>.*)\"",
            "#\\srenovate:\\sdatasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_version: \"(?<currentValue>.*)\"",
            "#\\srenovate:\\sdatasource=(?<datasource>.*?)\\sdepName=(?<depName>.*?)(\\sversioning=(?<versioning>.*?))?\\s.*?_version:\\s*(?:(?<currentValue>.*?))"
        ]
    }
  ]
}

